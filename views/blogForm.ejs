<%- include("partials/start.ejs") %>
<%- include("partials/navBar.ejs") %>
<%- include("partials/aside.ejs") %>

<main class="min-h-screen bg-slate-100 flex items-center justify-center px-4">
  <div class="w-full max-w-3xl">
    
    <!-- Header -->
    

    <!-- Card -->
    <div class="bg-white border border-slate-200 rounded-xl">
      <div class="p-8">
        <h1 class="text-xl font-semibold text-slate-900 mb-6">
          New Blog Post
        </h1>

        <form action="/admin/add-blog" method="post" enctype="multipart/form-data" class="space-y-6">

          <!-- Blog Title -->
          <div>
            <label for="blogTitle" class="block text-sm font-medium text-slate-700 mb-1">
              Title
            </label>
            <input
              type="text"
              id="blogTitle"
              name="blogTitle"
              required
              placeholder="Enter blog title"
              class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2.5 text-sm text-slate-900 focus:border-slate-900 focus:ring-0"
            >
          </div>

          <!-- Blog Image -->
          <div>
            <label for="blogImage" class="block text-sm font-medium text-slate-700 mb-1">
              Cover Image
            </label>
            <input
              type="file"
              id="blogImage"
              name="blogImage"
              accept="image/*"
              required
              class="block w-full text-sm text-slate-600
                     file:mr-4 file:rounded-md file:border file:border-slate-300
                     file:bg-white file:px-4 file:py-2
                     file:text-sm file:font-medium file:text-slate-700
                     hover:file:bg-slate-50"
            >
          </div>

          <!-- Tags -->
          <div>
            <label for="blogTags" class="block text-sm font-medium text-slate-700 mb-1">
              Tags
            </label>
            <input
              type="text"
              id="blogTags"
              name="blogTags"
              required
              placeholder="javascript, react, tutorial"
              class="w-full rounded-lg border border-slate-300 bg-white px-4 py-2.5 text-sm text-slate-900 focus:border-slate-900 focus:ring-0"
            >
          </div>

          <!-- Description -->
          <div>
            <label for="blogDescription" class="block text-sm font-medium text-slate-700 mb-1">
              Content
            </label>
            <textarea
              id="blogDescription"
              name="blogDescription"
              rows="6"
              required
              placeholder="Write your blog content..."
              class="w-full rounded-lg border border-slate-300 bg-white px-4 py-3 text-sm text-slate-900 focus:border-slate-900 focus:ring-0 resize-none"
            ></textarea>
          </div>

          <!-- Actions -->
          <div class="flex items-center justify-between pt-4">
            <a href="/admin" class="text-sm text-slate-500 hover:text-slate-800">
              ‚Üê Back to blogs
            </a>

            <button
              type="submit"
              class="inline-flex items-center rounded-lg bg-slate-900 px-6 py-2.5 text-sm font-medium text-white hover:bg-slate-800"
            >
              Publish Blog
            </button>
          </div>

        </form>
      </div>
    </div>

  </div>
</main>

<%- include("partials/end.ejs") %>
