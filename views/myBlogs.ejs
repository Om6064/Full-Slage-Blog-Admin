<!-- start -->
<%- include("partials/start.ejs") %>
<%- include("partials/navBar.ejs") %>

<div class="flex bg-slate-100 pt-16 min-h-screen">
  <%- include("partials/aside.ejs") %>

  <div id="main-content" class="w-full lg:ml-64 p-6 lg:p-10">
    <main>

      <!-- Header -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl font-semibold text-slate-900">My Blogs</h1>
          <p class="text-slate-600">All posts written by you</p>
        </div>

        <a href="/admin/add-blog"
          class="rounded-lg bg-slate-900 px-5 py-2.5 text-sm font-medium text-white hover:bg-slate-800">
          + New Blog
        </a>
      </div>

      <% if (myBlogs.length === 0) { %>

      <!-- Empty State -->
      <div class="bg-white border border-slate-200 rounded-xl p-12 text-center">
        <h2 class="text-xl font-semibold text-slate-900 mb-2">
          You havenâ€™t written any blogs yet
        </h2>
        <p class="text-slate-600 mb-6">
          Start creating content to see it here.
        </p>
        <a href="/admin/add-blog"
          class="inline-flex items-center rounded-lg bg-slate-900 px-6 py-3 text-sm font-medium text-white">
          Write first blog
        </a>
      </div>

      <% } else { %>

      <!-- Card Grid -->
      <div class="grid gap-6 sm:grid-cols-2 xl:grid-cols-3">

        <% myBlogs.forEach(data => { %>
        <div class="group h-full">
          <div class="h-full flex flex-col bg-white border border-slate-200 rounded-2xl
                      shadow-sm hover:shadow-lg transition-all duration-300">

            <!-- Image -->
            <div class="relative h-48 overflow-hidden rounded-t-2xl">
              <img
                src="/<%= data.blogImage %>"
                alt="<%= data.blogTitle %>"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              />

              <!-- Overlay Actions -->
              <div class="absolute inset-0 bg-black/40 flex items-center justify-center gap-3
                          opacity-0 group-hover:opacity-100 transition">
                <a href="/admin/quick-view/<%= data.id %>"
                  class="px-4 py-2 text-sm font-medium rounded-md bg-white text-slate-900 hover:bg-slate-100">
                  View
                </a>
                <a href="/admin/edit-form/<%= data.id %>"
                  class="px-4 py-2 text-sm font-medium rounded-md bg-slate-900 text-white hover:bg-slate-800">
                  Edit
                </a>
              </div>
            </div>

            <!-- Content -->
            <div class="p-6 flex flex-col flex-grow">

              <h3 class="text-lg font-semibold text-slate-900 line-clamp-2 mb-2">
                <%= data.blogTitle %>
              </h3>

              <% let tags = data.blogTags.split(","); %>
              <div class="flex flex-wrap gap-2 mb-3">
                <% tags.forEach(tag => { %>
                  <span class="px-2 py-1 text-[10px] uppercase rounded-md
                               bg-slate-100 text-slate-700 font-semibold">
                    <%= tag.trim() %>
                  </span>
                <% }) %>
              </div>

              <p class="text-sm text-slate-600 line-clamp-3 mb-4">
                <%- data.blogDescription %>
              </p>

              <!-- Footer -->
              <div class="mt-auto pt-4 border-t border-slate-100 flex items-center justify-between">
                <span class="text-xs uppercase text-slate-500 font-medium">
                  By you
                </span>

                <div class="flex gap-2">
                  <a href="/admin/edit-form/<%= data.id %>"
                    class="px-3 py-1.5 text-xs rounded-md bg-indigo-50 text-indigo-600 hover:bg-indigo-100">
                    Edit
                  </a>
                  <a href="/admin/delete-blog/<%= data.id %>"
                    class="px-3 py-1.5 text-xs rounded-md bg-red-50 text-red-600 hover:bg-red-100">
                    Delete
                  </a>
                </div>
              </div>

            </div>
          </div>
        </div>
        <% }) %>

      </div>

      <% } %>

    </main>
  </div>
</div>

<script src="/assets/js/app.bundle.js"></script>
<%- include("partials/end.ejs") %>
